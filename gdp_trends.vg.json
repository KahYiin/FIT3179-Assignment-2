{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 400,
  "title": {
    "text": "Real GDP Trends by State (2015-2023)",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#1e3c72",
    "anchor": "start",
    "font": "Segoe UI",
    "offset": 20
  },
  "data": {
    "url": "gdp_state_real_supply.csv"
  },
  "transform": [
    {
      "filter": "datum.series === 'abs'"
    },
    {
      "calculate": "datum.state === 'Kuala Lumpur' ? 'W.P. Kuala Lumpur' : datum.state === 'Labuan' ? 'W.P. Labuan' : datum.state === 'Putrajaya' ? 'W.P. Putrajaya' : datum.state",
      "as": "state_mapped"
    },
    {
      "filter": "datum.state !== 'Supra'"
    },
    {
      "aggregate": [
        {
          "op": "sum",
          "field": "value",
          "as": "total_gdp"
        }
      ],
      "groupby": ["state_mapped", "date"]
    },
    {
      "calculate": "year(datum.date)",
      "as": "year"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "strokeWidth": 2.5,
        "point": false
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal",
          "title": "Year",
          "axis": {
            "labelAngle": 0,
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "y": {
          "field": "total_gdp",
          "type": "quantitative",
          "title": "Real GDP (RM million)",
          "scale": {
            "zero": false,
            "domain": [0, 850000]
          },
          "axis": {
            "format": ",.0f",
            "labelFontSize": 11,
            "titleFontSize": 12
          }
        },
        "color": {
          "field": "state_mapped",
          "type": "nominal",
          "title": "State",
          "scale": {
            "domain": [
              "Selangor",
              "Johor",
              "W.P. Kuala Lumpur",
              "Sarawak",
              "Penang",
              "Sabah",
              "Perak",
              "Pahang",
              "Kedah",
              "Negeri Sembilan",
              "Terengganu",
              "Melaka",
              "Kelantan",
              "W.P. Putrajaya",
              "W.P. Labuan",
              "Perlis"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#F5C800",
              "#aec7e8",
              "#E41A1C",
              "#c5b0d5",
              "#c49c94",
              "#f7b6d2",
              "#c7c7c7",
              "#dbdb8d"
            ]
          },
          "legend": {
            "orient": "right",
            "titleFontSize": 12,
            "labelFontSize": 10,
            "symbolStrokeWidth": 3,
            "symbolSize": 100
          }
        },
        "strokeWidth": {
          "condition": {
            "param": "state_highlight",
            "empty": false,
            "value": 4
          },
          "value": 2
        },
        "opacity": {
          "condition": {
            "param": "state_highlight",
            "empty": false,
            "value": 1
          },
          "value": 0.5
        }
      },
      "params": [
        {
          "name": "state_highlight",
          "select": {
            "type": "point",
            "fields": ["state_mapped"],
            "on": "mouseover"
          }
        }
      ]
    },
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 50
      },
      "encoding": {
        "x": {
          "field": "year",
          "type": "ordinal"
        },
        "y": {
          "field": "total_gdp",
          "type": "quantitative",
          "scale": {
            "zero": false,
            "domain": [0, 850000]
          }
        },
        "color": {
          "field": "state_mapped",
          "type": "nominal",
          "scale": {
            "domain": [
              "Selangor",
              "Johor",
              "W.P. Kuala Lumpur",
              "Sarawak",
              "Penang",
              "Sabah",
              "Perak",
              "Pahang",
              "Kedah",
              "Negeri Sembilan",
              "Terengganu",
              "Melaka",
              "Kelantan",
              "W.P. Putrajaya",
              "W.P. Labuan",
              "Perlis"
            ],
            "range": [
              "#1f77b4",
              "#ff7f0e",
              "#9467bd",
              "#8c564b",
              "#e377c2",
              "#7f7f7f",
              "#bcbd22",
              "#17becf",
              "#d62728",
              "#aec7e8",
              "#ffbb78",
              "#c5b0d5",
              "#c49c94",
              "#f7b6d2",
              "#c7c7c7",
              "#dbdb8d"
            ]
          },
          "legend": null
        },
        "opacity": {
          "condition": {
            "param": "state_highlight",
            "empty": false,
            "value": 1
          },
          "value": 0.5
        },
        "tooltip": [
          {
            "field": "state_mapped",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "total_gdp",
            "type": "quantitative",
            "title": "Real GDP (RM million)",
            "format": ",.2f"
          }
        ]
      }
    }
  ]
}