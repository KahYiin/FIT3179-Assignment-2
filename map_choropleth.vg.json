{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1150,
  "height": 500,
  "title": {
    "text": "Real GDP Distribution Across Malaysia",
    "fontSize": 20,
    "fontWeight": "bold",
    "color": "#1e3c72",
    "anchor": "start",
    "font": "Segoe UI",
    "offset": 20
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Year: ",
        "debounce": 10
      }
    }
  ],
  "projection": {
    "type": "mercator",
    "center": [109.5, 4.2],
    "scale": 3000
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e8f4f8"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#f0f0f0",
        "stroke": "#cccccc",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "#d0d0d0",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "gdp_state_real_supply.csv"
      },
      "transform": [
        {
          "filter": "datum.series === 'abs'"
        },
        {
          "calculate": "year(datum.date)",
          "as": "year"
        },
        {
          "filter": "datum.year == YearSelect"
        },
        {
          "calculate": "datum.state === 'Kuala Lumpur' ? 'W.P. Kuala Lumpur' : datum.state === 'Labuan' ? 'W.P. Labuan' : datum.state === 'Putrajaya' ? 'W.P. Putrajaya' : datum.state",
          "as": "state_mapped"
        },
        {
          "filter": "datum.state !== 'Supra'"
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "value",
              "as": "total_gdp"
            }
          ],
          "groupby": ["state_mapped", "year"]
        },
        {
          "lookup": "state_mapped",
          "from": {
            "data": {
              "url": "malaysia_states.geojson",
              "format": {
                "type": "json",
                "property": "features"
              }
            },
            "key": "properties.name",
            "fields": ["type", "properties", "geometry"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 1.5
      },
      "encoding": {
        "color": {
          "field": "total_gdp",
          "type": "quantitative",
          "scale": {
            "scheme": "plasma",
            "type": "symlog",
            "domain": [50000, 850000]
          },
          "legend": {
            "title": "Real GDP (RM million)",
            "titleFontSize": 12,
            "labelFontSize": 11,
            "format": ",.0f",
            "orient": "bottom-right",
            "direction": "vertical",
            "gradientLength": 200
          }
        },
        "tooltip": [
          {
            "field": "state_mapped",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "total_gdp",
            "type": "quantitative",
            "title": "Real GDP (RM million)",
            "format": ",.2f"
          },
          {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          }
        ]
      }
    }
  ]
}