{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",
  "height": 500,
  "title": {
    "text": "Real GDP Distribution Across Malaysia",
    "fontSize": 16,
    "anchor": "start"
  },
  "params": [
    {
      "name": "YearSelect",
      "value": 2023,
      "bind": {
        "input": "range",
        "min": 2015,
        "max": 2023,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "StateSelection",
      "select": {
        "type": "point",
        "fields": ["properties.name"]
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "malaysia_states.geojson",
        "format": {
          "type": "json",
          "property": "features"
        }
      },
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "gdp_state_real_supply.csv"
            },
            "key": "state",
            "fields": ["value", "series", "date", "sector"]
          }
        },
        {
          "filter": "datum.series === 'abs'"
        },
        {
          "calculate": "year(datum.date)",
          "as": "year"
        },
        {
          "filter": "datum.year == YearSelect"
        },
        {
          "aggregate": [
            {
              "op": "sum",
              "field": "value",
              "as": "total_gdp"
            }
          ],
          "groupby": ["properties.name", "year"]
        }
      ],
      "projection": {
        "type": "mercator",
        "center": [109, 4],
        "scale": 2000
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#2c3e50",
        "strokeWidth": 1.5
      },
      "encoding": {
        "color": {
          "field": "total_gdp",
          "type": "quantitative",
          "scale": {
            "scheme": "viridis",
            "type": "symlog"
          },
          "legend": {
            "title": "Real GDP (RM million)",
            "format": ",.0f",
            "orient": "bottom",
            "direction": "horizontal"
          }
        },
        "opacity": {
          "condition": {
            "param": "StateSelection",
            "value": 1
          },
          "value": 0.7
        },
        "tooltip": [
          {
            "field": "properties.name",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "total_gdp",
            "type": "quantitative",
            "title": "Real GDP (RM million)",
            "format": ",.2f"
          },
          {
            "field": "year",
            "type": "ordinal",
            "title": "Year"
          }
        ]
      }
    }
  ]
}